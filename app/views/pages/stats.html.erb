<h3 class="font-weight-bold text-center mb-3 pt-3">Opta Poplar</h3>
<ul class="nav nav-pills justify-content-center" id="pills-tab" role="tablist">
  <li class="nav-item flex-grow-1">
    <a class="nav-link text-center" id="pills-season-one-tab" data-toggle="pill" href="#pills-season-one" role="tab" aria-controls="pills-season-one" aria-selected="true">Season One</a>
  </li>
  <li class="nav-item flex-grow-1">
    <a class="nav-link text-center active" id="pills-season-two-tab" data-toggle="pill" href="#pills-season-two" role="tab" aria-controls="pills-season-two" aria-selected="false">Season Two</a>
  </li>
</ul>
<!-- SEASON ONE -->
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade" id="pills-season-one" role="tabpanel" aria-labelledby="pills-season-one-tab">
    <div class="d-flex justify-content-center align-items-center">
      <table class="rounded shadow w-100">
        <thead>
          <tr class="border-bottom table-headers">
            <td class="p-2 border-right text-center">
              <%= image_tag 'players-black.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center">
              <%= image_tag 'matches-black.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center">
              <%= image_tag 'ball.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center">
              <%= image_tag 'boot.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center text-center">
              <%= image_tag 'ball.png', width: 20 %> + <%= image_tag 'boot.png', width: 20 %>
            </td>
             <td class="p-2 border-right text-center">
              <strong>W</strong>
            </td>
            <td class="p-2 border-right text-center">
              <STRONG>L</STRONG>
            </td>
            <td class="p-2 border-right text-center">
              <STRONG>W %</STRONG>
            </td>
          </tr>
        </thead>
        <tbody>
          <% @season_one_players.each_with_index do |player, index| %>
            <tr class="border-bottom <%= 'bg-light' if index.even? %>">
              <td class="d-flex justify-content-start align-items-center border-right pl-0 py-0 pr-2"><%= image_tag "#{player.photo}", height: 50, class: 'mr-1' %><span class="font-14 text-truncate"><%= player.name %></span></td>
              <td class="p-2 border-right text-center"><%= player.matches.where(season: 1, result_confirmed: true).size %></td>
              <td class="p-2 border-right text-center"><%= player.goals.where(season: 1).size %></td>
              <td class="p-2 border-right text-center"><%= player.assists.where(season: 1).size %></td>
              <td class="p-2 border-right text-center"><%= player.goals.where(season: 1).size + player.assists.where(season: 1).size %></td>
              <td class="p-2 border-right text-center"><%= player.teams.where(season: 1, winners: true).size %></td>
              <td class="p-2 border-right text-center"><%= player.teams.where(season: 1, losers: true).size %></td>
              <td class="p-2 border-right text-center"><%= player.matches.where(season: 1).any? ? "#{(player.teams.where(season: 1, winners: true).size / player.matches.where(season: 1, result_confirmed: true).size.to_f * 100).round(2)}%" : 'N/A' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- SEASON TWO -->
  <div class="tab-pane fade show active" id="pills-season-two" role="tabpanel" aria-labelledby="pills-season-two-tab">
    <div class="d-flex justify-content-center align-items-center">
      <table class="rounded shadow w-100">
        <thead>
          <tr class="border-bottom table-headers">
            <td class="p-2 border-right text-center">
              <%= image_tag 'players-black.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center">
              <%= image_tag 'matches-black.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center">
              <%= image_tag 'ball.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center">
              <%= image_tag 'boot.png', width: 25 %>
            </td>
            <td class="p-2 border-right text-center text-center">
              <%= image_tag 'ball.png', width: 20 %> + <%= image_tag 'boot.png', width: 20 %>
            </td>
             <td class="p-2 border-right text-center">
              <strong>W</strong>
            </td>
            <td class="p-2 border-right text-center">
              <STRONG>L</STRONG>
            </td>
            <td class="p-2 border-right text-center">
              <STRONG>W %</STRONG>
            </td>
          </tr>
        </thead>
        <tbody>
          <% @season_two_players.each_with_index do |player, index| %>
            <tr class="border-bottom <%= 'bg-light' if index.even? %>">
              <td class="d-flex justify-content-start align-items-center border-right pl-0 py-0 pr-2"><%= image_tag "#{player.photo}", height: 50, class: 'mr-1' %><span class="font-14 text-truncate"><%= player.name %></span></td>
              <td class="p-2 border-right text-center"><%= player.matches.where(season: 2, result_confirmed: true).size %></td>
              <td class="p-2 border-right text-center"><%= player.goals.where(season: 2).size %></td>
              <td class="p-2 border-right text-center"><%= player.assists.where(season: 2).size %></td>
              <td class="p-2 border-right text-center"><%= player.goals.where(season: 2).size + player.assists.where(season: 2).size %></td>
              <td class="p-2 border-right text-center"><%= player.teams.where(season: 2, winners: true).size %></td>
              <td class="p-2 border-right text-center"><%= player.teams.where(season: 2, losers: true).size %></td>
              <td class="p-2 border-right text-center"><%= player.matches.where(season: 2).any? ? "#{(player.teams.where(season: 2, winners: true).size / player.matches.where(season: 2, result_confirmed: true).size.to_f * 100).round(2)}%" : 'N/A' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


