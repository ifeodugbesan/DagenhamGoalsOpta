<div class="container" data-target="common.container">
  <h3 class="font-weight-bold text-center mt-3">Latest News</h3>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card rounded shadow my-3">
        <%= image_tag "cover.jpg", style: 'width: 100%' %>
        <div class="p-2 d-flex flex-column justify-content-center align-items-center">
          <h5 class="font-weight-bold">Poplar returns!</h5>
          <p class="mb-0" style="font-size: 14px;">Due to London's post lockdown placement in Tier 2 we can now welcome back our beloved Poplar FC Sundays!</p>
        </div>
      </div>
    </div>
  </div>
  <h3 class="font-weight-bold text-center mt-3">MVP</h3>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card rounded shadow my-3">
        <%= image_tag @mvp.photo, style: 'width: 100%' %>
        <div class="p-2 d-flex flex-column justify-content-center align-items-center">
          <h5 class="font-weight-bold"><%= @mvp.name %></h5>
          <p class="mb-0" style="font-size: 14px;">Goal contributions: <%= @mvp.goals.size + @mvp.assists.size %></p>
        </div>
      </div>
    </div>
  </div>

</div>
